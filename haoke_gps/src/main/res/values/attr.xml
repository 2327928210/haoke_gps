<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 爱心参数设置 -->
    <attr name="waveicon" format="reference"></attr>
    <attr name="hearticon" format="reference"></attr>

    <declare-styleable name="MyHeartView">
        <attr name="waveicon"></attr>
        <attr name="hearticon"></attr>
    </declare-styleable>
    <!-- main tap -->
    <attr name="icon" format="reference"></attr>
    <attr name="icon_bg" format="reference"></attr>
    <attr name="color" format="color"></attr>
    <attr name="text" format="string"></attr>
    <attr name="text_size" format="dimension"></attr>

    <declare-styleable name="ChangeColorIconWithText">
        <attr name="icon"></attr>
        <attr name="icon_bg"></attr>
        <attr name="color"></attr>
        <attr name="text"></attr>
        <attr name="text_size"></attr>
    </declare-styleable>
