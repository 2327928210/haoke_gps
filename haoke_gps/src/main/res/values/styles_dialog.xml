<resources>

    <style name="mypopwindow_anim_style">

        <!-- 指定显示的动画xml -->
        <item name="android:windowEnterAnimation">@anim/anim_popshow</item>
        <!-- 指定消失的动画xml -->
        <item name="android:windowExitAnimation">@anim/anim_pophidden</item>
    </style>

    <style name="dialogWindowAnim">

        <!-- 指定显示的动画xml -->
        <item name="android:windowEnterAnimation">@anim/anim_below_show</item>
        <!-- 指定消失的动画xml -->
        <item name="android:windowExitAnimation">@anim/anim_below_hidden</item>
    </style>

    <!-- 日历样式 -->
    <style name="dateStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">11sp</item>
    </style>

    <!-- 网络请求等待Dialog -->
    <style name="WarmRemindDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    
    
       <!-- 网络请求等待Dialog -->
    <style name="WarmRemindDialog2" parent="@android:style/Theme.DeviceDefault.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
         <!-- 点击外部是否允许取消 -->
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="selector_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>