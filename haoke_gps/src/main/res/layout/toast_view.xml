<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_toast"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="3"
            android:minHeight="@dimen/layout_x_50"
            android:minWidth="@dimen/layout_x_150"
            android:paddingLeft="@dimen/layout_x_10"
            android:paddingTop="@dimen/layout_x_5"
            android:paddingRight="@dimen/layout_x_10"
            android:paddingBottom="@dimen/layout_x_5"
            android:text=""
            android:maxWidth="@dimen/layout_x_250"
            android:textColor="@color/black"
            android:textSize="@dimen/layout_x_18" />
    </LinearLayout>

</LinearLayout>