<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/layout_x_20"
    android:paddingRight="@dimen/layout_x_20" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_bg_dialog"
            android:orientation="vertical" >
 
            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/device_alram_shock"
                android:textColor="@color/black"
                android:textSize="@dimen/layout_x_20" />

            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <RadioGroup 
                    android:id="@+id/radioGroup1" 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/layout_x_10" >

                    <RadioButton
                        android:id="@+id/radio0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/other_close"
                        android:textColor="@color/black" />

                    <RadioButton
                        android:id="@+id/radio1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/device_alram_shock_1"
                        android:textColor="@color/black" />

                    <RadioButton
                        android:id="@+id/radio2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/device_alram_shock_2"
                        android:textColor="@color/black" />

                    <RadioButton
                        android:id="@+id/radio3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/device_alram_shock_3"
                        android:textColor="@color/black" />
                </RadioGroup>
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/layout_y_45"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/negativeButton"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/layout_y_40"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/other_cancel"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/text_gray" />

                <TextView
                    android:id="@+id/positiveButton"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/layout_y_40"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/other_ensure"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>