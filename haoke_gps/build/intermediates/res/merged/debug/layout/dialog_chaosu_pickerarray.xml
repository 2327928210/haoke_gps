<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <TextView
                android:id="@+id/tv_cancle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:text="@string/other_cancel"
                android:textColor="@color/main_color"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:text="@string/device_alram_setting"
                android:textColor="@color/main_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:text="@string/other_ensure"
                android:textColor="@color/main_color"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#11112233" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170dp">
            <RelativeLayout
                android:id="@+id/center_view"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true">
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/bt_color"
                    />
                <View
                    android:layout_width="0.5dp"
                    android:layout_alignParentRight="true"
                    android:layout_height="match_parent"
                    android:background="@color/bt_color"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_toLeftOf="@+id/center_view"
                android:layout_width="fill_parent"
                android:layout_height="170dp"
                android:padding="10dp"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/device_chaosu_title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/device_chaosu_title"
                    android:textColor="@color/main_color"
                    android:textSize="15sp" />
                <RelativeLayout
                    android:id="@+id/linearLayout1"
                    android:layout_below="@+id/device_chaosu_title1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff">

                    <com.haoke.view.PickerView
                        android:id="@+id/pv_all"
                        android:layout_width="wrap_content"
                        android:layout_height="160dp"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/tv_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                       android:layout_centerVertical="true"
                        android:text="M"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/layout_x_20"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_below="@+id/device_chaosu_title1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_centerVertical="true"
                        android:background="#0000" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/view"
                        android:layout_marginTop="15dp"
                        android:background="#000" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_above="@id/view"
                        android:layout_alignParentLeft="true"
                        android:layout_marginBottom="15dp"
                        android:background="#000" />
                </RelativeLayout>

            </RelativeLayout>


            <RelativeLayout
                android:layout_toRightOf="@+id/center_view"
                android:layout_width="fill_parent"
                android:layout_height="170dp"
                android:padding="10dp"
                android:layout_marginBottom="5dp">
                <TextView
                    android:id="@+id/device_chaosu_title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/device_chaosu_title2"
                    android:textColor="@color/main_color"
                    android:textSize="15sp" />
                <RelativeLayout
                    android:id="@+id/linearLayout2"
                    android:layout_below="@+id/device_chaosu_title2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff">

                    <com.haoke.view.PickerView
                        android:id="@+id/pv_all_2"
                        android:layout_width="wrap_content"
                        android:layout_height="160dp"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/tv_unit_2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:text="M"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/layout_x_20"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_below="@+id/device_chaosu_title2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <View
                        android:id="@+id/view_2"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_centerVertical="true"
                        android:background="#0000" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/view_2"
                        android:layout_marginTop="15dp"
                        android:background="#000" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_above="@id/view_2"
                        android:layout_alignParentLeft="true"
                        android:layout_marginBottom="15dp"
                        android:background="#000" />

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>