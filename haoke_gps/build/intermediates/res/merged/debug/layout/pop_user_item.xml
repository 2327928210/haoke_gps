<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/shape_login_listview">

    <LinearLayout
        android:id="@+id/lin_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_bt"
        android:paddingTop="@dimen/layout_y_12"
        android:paddingBottom="@dimen/layout_y_12"
        android:paddingLeft="@dimen/layout_x_20"
        android:paddingRight="@dimen/layout_x_10">

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="TextView" />

        <Button
            android:id="@+id/bt_del"
            android:layout_width="@dimen/layout_x_30"
            android:layout_height="@dimen/layout_x_30"
            android:background="@drawable/shez_delete" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/text_gray" />

</LinearLayout>