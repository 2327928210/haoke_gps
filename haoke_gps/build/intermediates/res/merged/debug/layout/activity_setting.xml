<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <include layout="@layout/layout_titlebar" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:background="@drawable/login_bg"
        android:orientation="vertical"
        android:paddingLeft="@dimen/layout_x_35"
        android:paddingRight="@dimen/layout_x_35"
        android:paddingTop="@dimen/layout_y_10" >

        <RelativeLayout
            android:id="@+id/rel_push"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_y_80" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/layout_x_10"
                android:src="@drawable/setting_push" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/layout_x_20"
                android:layout_toRightOf="@+id/imageView1"
                android:text="@string/push"
                android:textColor="@color/white"
                android:textSize="@dimen/layout_x_20" />

            <com.haoke.view.MySwitchView
                android:id="@+id/MySwitch_push"
                android:layout_width="@dimen/layout_y_75"
                android:layout_height="@dimen/layout_y_40"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/white" />

        <RelativeLayout
            android:id="@+id/rel_apn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_y_80" >

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/layout_x_10"
                android:src="@drawable/setting_help" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/layout_x_20"
                android:layout_toRightOf="@+id/imageView4"
                android:text="@string/apn"
                android:textColor="@color/white"
                android:textSize="@dimen/layout_x_20" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/white_next" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/white" />

        <RelativeLayout
            android:id="@+id/rel_help"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_y_80"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/layout_x_10"
                android:src="@drawable/setting_help" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/layout_x_20"
                android:layout_toRightOf="@+id/imageView2"
                android:text="@string/help"
                android:textColor="@color/white"
                android:textSize="@dimen/layout_x_20" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/white_next" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/white"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rel_about"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_y_80"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/layout_x_10"
                android:src="@drawable/setting_about" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/layout_x_20"
                android:layout_toRightOf="@+id/imageView3"
                android:text="@string/about_us"
                android:textColor="@color/white"
                android:textSize="@dimen/layout_x_20" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/white_next" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/white"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rel_version"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_y_80" >

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/layout_x_10"
                android:src="@drawable/setting_version" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/layout_x_10"
                android:layout_toRightOf="@+id/imageView4"
                android:text="@string/setting_version"
                android:textColor="@color/white"
                android:textSize="@dimen/layout_x_20" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/white_next" />

            <TextView
                android:id="@+id/tv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/textView2"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/layout_x_20" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/white" />
    </LinearLayout>

</LinearLayout>